<Window x:Class="client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NateOn 로그인"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#4A90E2">
            <StackPanel VerticalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="NateOn"
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="MESSENGER"
                           FontSize="12"
                           Foreground="White"
                           Opacity="0.8"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="0"
                Grid.RowSpan="2"
                Width="320"
                VerticalAlignment="Top"
                Margin="0,130,0,0"
                Background="White"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                                  Direction="270"
                                  ShadowDepth="3"
                                  Opacity="0.15"
                                  Color="Black"/>
            </Border.Effect>

            <StackPanel Margin="25">
                <TextBlock Text="로그인"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="#333333"/>

                <TextBlock Text="아이디"
                           FontSize="12"
                           Foreground="#888"
                           Margin="0,0,0,5"/>

                <Border BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Border Padding="10,0">
                        <TextBox x:Name="txtUsername"
                                 Height="38"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                    </Border>
                </Border>

                <TextBlock Text="비밀번호"
                           FontSize="12"
                           Foreground="#888"
                           Margin="0,0,0,5"/>

                <Border BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,25">
                    <Border Padding="10,0">
                        <PasswordBox x:Name="txtPassword"
                                     Height="38"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"/>
                    </Border>
                </Border>

                <Button Content="로그인"
                        Height="45"
                        Background="#4A90E2"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4A90E2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#357ABD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock x:Name="txtError"
                           Foreground="Red"
                           FontSize="11"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
